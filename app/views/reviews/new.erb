<h1><%= @activity.name %></h1>
<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>


<%= form_for @review do |f| %>

<%= f.label :description %><br>
<%= f.text_area :description %><br>

<%= f.label :rating %><br>
<%= f.number_field :rating %><br>

<%= f.label :user_id %><br>
<%= f.collection_select :user_id, @users, :id, :name, prompt: true %>

<%= fields_for @picture do |f| %>
<p>Add a Picture</p>
<%= f.label :img_url %>
<%= f.text_field :img_url %><br>
<%= f.label :caption %>
<%= f.text_field :caption %>
<br>
<% end %>

<%= f.hidden_field :activity_id, :value => session[:activity_id] %><br>

<%= f.submit %>
<% end %>
