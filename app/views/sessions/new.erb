<% provide(:title, "Log In") %>

<div class="background-log-in">


<div class="error">
  <%if flash[:danger]%>
    <p> <%= flash[:danger]  %></p>
  <% end %>
</div>
<div class="form-log-in">

<h1>Log In</h1>

<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Log In" %>

<% end %>

<p>New User? <%= link_to "Sign Up Here!", new_user_path %></p>

<p>Finished Up? <%= link_to "Log Out Here!", logout_path, method: :delete %></p>

</div>


</div>
