<h1> <%= @activity.name %> </h1>

<h3> <%= @activity.neighborhood.name %> </h3>

<h3>Category: <%= @activity.category.capitalize %></h3>

<h3>This is an <%= @activity.setting %> activity</h3>

<h3>Best time to go: <%= @activity.tod.join(", ") %></h3>



<% if @activity.url_link %>
<p><%= link_to "visit their website", @activity.url_link %></p>
<% end %>

<h2>Reviews</h2>
<% @activity.reviews.each do |a| %>
<p><%= a.description %><br>
Rating: <%= a.rating %>/5 <br>
- <%= a.user.name %></p>
<% end %>

<p><%= button_to "Review This", new_review_path(@activity.id), method: :get %></p><br>
