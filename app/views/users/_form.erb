<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :name, "Username" %><br>
<%= f.text_field :name %><br>

<%= f.label :password %><br>
<%= f.password_field :password %><br>

<%= f.submit :class=>"btn btn-secondary"%>
<% end %>
